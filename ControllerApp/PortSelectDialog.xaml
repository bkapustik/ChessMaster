<Window x:Class="ControllerApp.PortSelectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControllerApp"
        mc:Ignorable="d"
        Title="Select Port" Height="190.042" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Topmost="True" ShowInTaskbar="False">
    <Grid>
		<Label x:Name="label" Content="Port:" HorizontalAlignment="Left" Margin="40,40,0,0" VerticalAlignment="Top"/>
		<ComboBox x:Name="comboBoxPorts" HorizontalAlignment="Left" Margin="79,44,0,0" VerticalAlignment="Top" Width="160"/>
		<Button x:Name="buttonSelect" Content="Select" HorizontalAlignment="Left" Margin="79,84,0,0" VerticalAlignment="Top" Width="75" Height="25" Click="buttonSelect_Click" IsDefault="True"/>
		<Button x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="Left" Margin="164,84,0,0" VerticalAlignment="Top" Width="75" Height="25" Click="buttonCancel_Click"/>

	</Grid>
</Window>
